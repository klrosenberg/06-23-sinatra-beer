        <td><input type="radio" name="id" value="<%= beer.id %>"><%= beer.name%></td>
      </tr>
    <% end %>
  </table>
    <p><center><input type="submit"></center></p>
  </center></form> 
  <center><a href="/home">Main Menu</a></center>
<body>
</html>